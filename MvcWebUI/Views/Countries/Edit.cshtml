@model CountryModel

@{
    ViewData["Title"] = "Edit Country";
}

<h1>@ViewData["Title"]</h1>

<partial name="_CreateEdit" model="Model" />

<form id="deleteCountryForm" asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" a/>
</form>

<div>
    <button id="deleteCountryButton" class="btn btn-danger">Delete</button>
    <br />
    <br />
    <a asp-action="Index">Back to Country List</a>
</div>

@section Scripts{ 
<script>
    $(function () {
        $("#deleteCountryButton").click(function () {
            $("#deleteCountryForm").submit();
        });
    });
</script>
}

