@model ProductModel

<div class="row">
    <div class="col-md-4">
        @*<form asp-action="Create" asp-controller="Products" method="post" autocomplete="off">*@
        @using (Html.BeginForm(FormMethod.Post,new { autocomplete="off", enctype="multipart/form-data"}))
        {
            @Html.AntiForgeryToken()
            <input asp-for="Id" type="hidden" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitPriceText"></label>
                <input asp-for="UnitPriceText" class="form-control" />
                <span asp-validation-for="UnitPriceText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockAmount"></label>
                <input asp-for="StockAmount" class="form-control" />
                <span asp-validation-for="StockAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpirationDateText"></label>
                <input asp-for="ExpirationDateText" class="form-control expiration-date" type="text" />
                <span asp-validation-for="ExpirationDateText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Image</label>
                <input type="file" name="image" accept="@AppSettings.AcceptedImageExtensions" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        @*</form>*@
        }
    </div>
</div>
